<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f8fa"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal"
        android:background="#ffffff"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="37dp"
            android:src="@mipmap/back" />

        <TextView
            android:id="@+id/backtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="25dip"
            android:layout_marginTop="37dp"
            android:text="联系信息"
            android:textColor="@color/colorDarkGray"
            android:textSize="17sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3px"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="11dp"
        android:layout_marginRight="20dp"
        android:background="@color/colorDarkGray" />

    <LinearLayout
        android:layout_width="355dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="48dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="37dp"
            android:text="居住地址"
            android:textColor="#333333"
            android:textSize="14sp" />

        <EditText
            android:layout_weight="1"
            android:id="@+id/home_information_residential_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请填写您居住的详细地址"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="355dp"
        android:layout_height="0.3px"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/colorDarkGray" />

    <LinearLayout
        android:layout_width="355dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="48dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="37dp"
            android:text="单位名称"
            android:textColor="#333333"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/home_information_unit_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请填写您工作单作的全称"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="355dp"
        android:layout_height="0.3px"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/colorDarkGray" />

    <LinearLayout
        android:layout_width="355dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="48dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="37dp"
            android:text="单位地址"
            android:textColor="#333333"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/home_information_unit_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请填写您单位的详细地址"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="355dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="48dp"
        android:background="#ffffff"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="45dp"
            android:text="联系人1"
            android:textColor="#333333"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/home_information_Contacts_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_weight="1"
            android:hint="请选择与联系人关系"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/home_information_Contacts_one_xiala"
            android:layout_width="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/xiala" />
    </LinearLayout>
    <View
        android:layout_width="355dp"
        android:layout_height="0.3px"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/colorDarkGray" />
    <LinearLayout
        android:layout_width="355dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="48dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="24dp"
            android:text="联系人姓名"
            android:textColor="#333333"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/home_Name_of_contact_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请填写联系人姓名"
            android:textSize="14sp" />
    </LinearLayout>
    <View
        android:layout_width="355dp"
        android:layout_height="0.3px"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/colorDarkGray" />
    <LinearLayout
        android:layout_width="355dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="48dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="37dp"
            android:text="联系电话"
            android:textColor="#333333"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/home_Choose_contacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_weight="1"
            android:hint="请选择联系人"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/home_Choose_contacts_btn"
            android:layout_width="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/gengduo" />
    </LinearLayout>
    <View
        android:layout_width="355dp"
        android:layout_height="0.3px"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/colorDarkGray" />
    <LinearLayout
        android:layout_width="355dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="48dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="45dp"
            android:text="联系人2"
            android:textColor="#333333"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/home_information_Contacts_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_weight="1"
            android:hint="请选择与联系人关系"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/home_information_Contacts_two_xiala"
            android:layout_width="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/xiala" />
    </LinearLayout>
    <View
        android:layout_width="355dp"
        android:layout_height="0.3px"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/colorDarkGray" />
    <LinearLayout
        android:layout_width="355dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="48dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginRight="24dp"
            android:text="联系人姓名"
            android:textColor="#333333"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/home_Name_of_contact_person_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请填写联系人姓名"
            android:textSize="14sp" />
    </LinearLayout>
    <View
        android:layout_width="355dp"
        android:layout_height="0.3px"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/colorDarkGray" />
    <LinearLayout
        android:layout_width="355dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="48dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="37dp"
            android:text="联系电话"
            android:textColor="#333333"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/home_Choose_contacts_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_weight="1"
            android:hint="请选择联系人"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/home_Choose_contacts_btn_two"
            android:layout_width="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/gengduo" />
    </LinearLayout>
    <View
        android:layout_width="355dp"
        android:layout_height="0.3px"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/colorDarkGray" />
    <Button
        android:layout_width="335dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_home_button"
        android:text="申 请 借 款"
        android:textColor="#ffffff"
        android:textSize="16sp" />
</LinearLayout>
