<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_lcon_detial"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="37dp"
        android:gravity="center"
        android:text="预计借款费用"
        android:textColor="#333333"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="295dp"
        android:layout_height="26dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="22dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="旧款金额(元)"
            android:textColor="#000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/Home_Loan_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:text="10000"
            android:textColor="@color/colorDarkGray"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="295dp"
        android:layout_height="26dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="期限"
            android:textColor="#000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/home_term"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:text="7天"
            android:textColor="@color/colorDarkGray"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="295dp"
        android:layout_height="26dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="利率(日)"
            android:textColor="#000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/home_interest_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:text="1.3%"
            android:textColor="@color/colorDarkGray"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="295dp"
        android:layout_height="26dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="利息(元)"
            android:textColor="#000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/home_Interest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:text="10000"
            android:textColor="@color/colorDarkGray"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="295dp"
        android:layout_height="26dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="服务费(元)"
            android:textColor="#000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/home_Service_charge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:text="10000"
            android:textColor="@color/colorDarkGray"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="295dp"
        android:layout_height="26dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="咨询费(元)"
            android:textColor="#000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/home_Consultation_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:text="10000"
            android:textColor="@color/colorDarkGray"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="295dp"
        android:layout_height="26dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="提现费(元)"
            android:textColor="#000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/home_Cash_withdrawals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:text="10000"
            android:textColor="@color/colorDarkGray"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="295dp"
        android:layout_height="26dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="到账金额(元)"
            android:textColor="#000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/home_Amount_of_account_payable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:text="10000"
            android:textColor="@color/colorDarkGray"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="295dp"
        android:layout_height="26dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="到期应还金额(元)"
            android:textColor="#000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/home_Amount_due_and_payable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:text="10000"
            android:textColor="@color/colorDarkGray"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="19dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/home_reg_agreement"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="阅读并同意借款协议"
            android:textSize="13sp" />
    </LinearLayout>

    <TextView
        android:layout_width="246dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="并知晓审核通过后资金直接划入收款银行卡"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="295dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_Temporary_application"
            android:layout_width="120dp"
            android:layout_height="44dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/shape_no_btn"
            android:text="暂不申请"
            android:textColor="@color/orange"
            android:textSize="20dp" />
        <Button
            android:id="@+id/btn_Confirm_application"
            android:layout_width="120dp"
            android:layout_height="44dp"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="17dp"
            android:background="@drawable/shape_home_button"
            android:text="确认申请"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </LinearLayout>


</LinearLayout>
