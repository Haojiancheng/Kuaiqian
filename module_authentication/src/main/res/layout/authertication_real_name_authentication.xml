<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/white">

        <ImageView
            android:layout_width="9dp"
            android:layout_height="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="36dp"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="人脸识别"
            android:textColor="@color/colorLightBlank"
            android:textSize="17sp" />

        <ImageView
            android:layout_width="17dp"
            android:layout_height="18dp"
            android:layout_marginTop="33dp"
            android:layout_marginRight="20dp"
            android:src="@mipmap/daohang_kefu" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="335dp"
        android:layout_height="165dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_renzheng"
        android:orientation="vertical">

        <ImageView
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_marginLeft="144dp"
            android:layout_marginTop="47dp"
            android:src="@mipmap/postimage" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="134dp"
            android:layout_marginTop="12sp"
            android:text="身份证正面"
            android:textColor="@color/orange"
            android:textSize="14sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="335dp"
        android:layout_height="165dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_renzheng"
        android:orientation="vertical">

        <ImageView
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_marginLeft="144dp"
            android:layout_marginTop="47dp"
            android:src="@mipmap/postimage" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="134dp"
            android:layout_marginTop="12sp"
            android:text="身份证反面"
            android:textColor="@color/orange"
            android:textSize="14sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_authertication_rrealname_complete"
        android:layout_width="335dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/shape_authertication_button"
        android:text="完成"
        android:textColor="@color/white"
        android:textSize="20dp" />
</LinearLayout>