<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment"
    android:orientation="vertical"
    tools:context=".AuthenticationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/white">

        <ImageView
            android:layout_width="9dp"
            android:layout_height="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="36dp"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="认证"
            android:textColor="@color/colorDarkGray"
            android:textSize="17sp" />

        <ImageView
            android:layout_width="17dp"
            android:layout_height="18dp"
            android:layout_marginTop="33dp"
            android:layout_marginRight="20dp"
            android:src="@mipmap/daohang_kefu" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Real_name_authentication"
        android:layout_width="335dp"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_renzheng"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:divider="@drawable/shape_line"
            android:orientation="horizontal"
            android:showDividers="end">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="17dp"
                android:layout_weight="1"
                android:text="实名认证"
                android:textColor="@color/colorDarkGray"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:layout_marginRight="21dp"
                android:text="已完成"
                android:textColor="@color/orange"
                android:textSize="13sp" />
        </LinearLayout>

        <View
            android:layout_width="335dp"
            android:layout_height="1dp"
            android:background="@drawable/shape_line"></View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:layout_marginLeft="16dp"
            android:gravity="center_vertical"
            android:text="上传身份证正、反面"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Face_recognition"
        android:layout_width="335dp"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_renzheng"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:divider="@drawable/shape_line"
            android:orientation="horizontal"
            android:showDividers="end">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="17dp"
                android:layout_weight="1"
                android:text="人脸识别"
                android:textColor="@color/colorDarkGray"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:layout_marginRight="21dp"
                android:text="已完成"
                android:textColor="@color/orange"
                android:textSize="13sp" />
        </LinearLayout>

        <View
            android:layout_width="335dp"
            android:layout_height="1dp"
            android:background="@drawable/shape_line"></View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:layout_marginLeft="16dp"
            android:gravity="center_vertical"
            android:text="本人与身份证信息进行匹配  "
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Operator_Certification"
        android:layout_width="335dp"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_renzheng"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:divider="@drawable/shape_line"
            android:orientation="horizontal"
            android:showDividers="end">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="17dp"
                android:layout_weight="1"
                android:text="运营商认证"
                android:textColor="@color/colorDarkGray"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:layout_marginRight="21dp"
                android:text="已完成"
                android:textColor="@color/orange"
                android:textSize="13sp" />
        </LinearLayout>

        <View
            android:layout_width="335dp"
            android:layout_height="1dp"
            android:background="@drawable/shape_line"></View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:layout_marginLeft="16dp"
            android:gravity="center_vertical"
            android:text="加速审批流程   "
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Taobao_certification"
        android:layout_width="335dp"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_renzheng"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:divider="@drawable/shape_line"
            android:orientation="horizontal"
            android:showDividers="end">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="17dp"
                android:layout_weight="1"
                android:text="淘宝认证"
                android:textColor="@color/colorDarkGray"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:layout_marginRight="21dp"
                android:text="已完成"
                android:textColor="@color/orange"
                android:textSize="13sp" />
        </LinearLayout>

        <View
            android:layout_width="335dp"
            android:layout_height="1dp"
            android:background="@drawable/shape_line"></View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:layout_marginLeft="16dp"
            android:gravity="center_vertical"
            android:text="增加审批通过率    "
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Binding_bank_cards"
        android:layout_width="335dp"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_renzheng"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:divider="@drawable/shape_line"
            android:orientation="horizontal"
            android:showDividers="end">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="17dp"
                android:layout_weight="1"
                android:text="绑定银行卡"
                android:textColor="@color/colorDarkGray"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:layout_marginRight="21dp"
                android:text="已完成"
                android:textColor="@color/orange"
                android:textSize="13sp" />
        </LinearLayout>

        <View
            android:layout_width="335dp"
            android:layout_height="1dp"
            android:background="@drawable/shape_line"></View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:layout_marginLeft="16dp"
            android:gravity="center_vertical"
            android:text="放款后的收款卡     "
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="296dp"
        android:layout_height="73dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="0dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginTop="2dp"
            android:textSize="13sp"
            android:text="温馨提示：" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:textSize="13sp"
            android:text="1、认证过程请按先后顺序进行。" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:textSize="13sp"
            android:text="2、上传的照片需清晰，人脸识别需本人进行操作。" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:textSize="13sp"
            android:text="3、认证完成后方可进行申请贷款。" />
    </LinearLayout>


</LinearLayout>